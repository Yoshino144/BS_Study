<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bar_id"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/back_one_xi_hui" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部课程"
                android:textColor="#000000"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="-7dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="#ffffff">

            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="专业课"
                android:background="@drawable/item_write_radius"
                android:textColor="#000000"
                android:textSize="16dp"
                android:height="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="非专业课"
                android:background="@drawable/item_write_radius"
                android:textColor="#777777"
                android:height="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_height="2dp"
        android:gravity="center"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="2dp">

            <LinearLayout
                android:id="@+id/ooo"
                android:gravity="center"
                android:background="#000000"
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="2dp">

            <LinearLayout
                android:id="@+id/ttt"
                android:visibility="gone"
                android:background="#000000"
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#e3e2e4"
            android:layout_height="1px"/>

        <LinearLayout
            android:background="@color/bg_huidi"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/one_list"
                android:background="@drawable/curr_ce"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/two_list"
                android:visibility="gone"
                android:background="@drawable/curr_ce"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
