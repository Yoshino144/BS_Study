<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="49dp">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">


        </LinearLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:layout_gravity="center_vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="29dp"
            android:background="#fff"
            app:tl_textSelectColor="@color/pc_blue3"
            app:tl_textUnselectColor="#937F7F"
            app:tl_indicator_height="2dp"
            app:tl_indicator_margin_top="3dp"
            app:tl_indicator_corner_radius="1dp"
            app:tl_indicator_width="10dp"
            app:tl_textsize="17sp"
            app:tl_indicator_color="@color/pc_blue3"
            app:tl_tab_space_equal="true" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/renwulan2"
        android:layout_height="2dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:text="排行"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>


</LinearLayout>