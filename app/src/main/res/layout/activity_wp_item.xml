<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:id="@+id/wrong_item"
    android:background="@drawable/shape_wrong"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:id="@+id/problemContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个C程序的执行是从_____。"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"

        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/write_fan"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/AAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="9dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_A"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aaa" />

                <TextView
                    android:id="@+id/text_AA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="您给出的回答选项？"
                    android:textSize="15sp"
                    android:textColor="#9a9a9a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_B"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bbb" />

                <TextView
                    android:id="@+id/text_BB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="您给出的回答选项？"
                    android:textSize="15sp"
                    android:textColor="#9a9a9a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_C"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ccc" />

                <TextView
                    android:id="@+id/text_CC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="您给出的回答选项？"
                    android:textSize="15sp"
                    android:textColor="#9a9a9a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DDD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_D"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ddd" />

                <TextView
                    android:id="@+id/text_DD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="您给出的回答选项？"
                    android:textSize="15sp"
                    android:textColor="#9a9a9a" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/jiexi"
        android:background="@drawable/shape_wrong_jie"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="查看解析"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>