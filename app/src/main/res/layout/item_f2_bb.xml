<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <top.pcat.study.View.CustomRoundAngleImageView
            android:src="@drawable/image44"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="235dp"
            roundiv:left_bottom_radius="9dp"
            roundiv:left_top_radius="9dp"
            roundiv:right_bottom_radius="9dp"
            roundiv:right_top_radius="9dp"
            android:layout_height="300dp"/>


        <LinearLayout
            android:id="@+id/kapian1"
            android:background="@drawable/tupianhui"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="235dp"
            android:layout_height="300dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Top"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/bang_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="人数榜"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recycler_kechngbangdan_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
